{
    "manifest_version": 3,
    "name": "Archive.org Book Downloader",
    "version": "1.0",
    "description": "Generates a URL to download ACSM files from archive.org",
    "permissions": [
      "activeTab",
      "scripting",
      "downloads"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  